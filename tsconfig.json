{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*_test.ts",
    "**/test",
    "core/test",
    "dev/test"
  ]
}
