{
  "name": "@google/adk",
  "version": "0.1.0-rc.0",
  "description": "Google ADK JS",
  "author": "Google",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/adk-js"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "dist"
  ],
  "type": "module",
  "typings": "./dist/types/index.d.ts",
  "main": "./dist/node/index.mjs",
  "module": "./dist/web/index.js",
  "browser": "./dist/web/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/node/index.mjs",
      "require": "./dist/node/index.cjs",
      "default": "./dist/node/index.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "clean:all": "npm run clean && rm -rf node_modules",
    "build": "npm run build:types && npm run build:node_esm && npm run build:node_cjs && npm run build:web",
    "build:node_esm": "esbuild ./src/index.ts --outfile=dist/node/index.mjs --format=esm --bundle --platform=node --target=node10.4 --packages=external",
    "build:node_cjs": "esbuild ./src/index.ts --outfile=dist/node/index.cjs --format=cjs --bundle --platform=node --target=node10.4 --packages=external",
    "build:web": "esbuild ./src/index_web.ts --outfile=dist/web/index.js --format=esm --bundle  --platform=browser --target=chrome58,firefox57,safari11",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "esbuild": "^0.25.9",
    "eslint-config-prettier": "^9.1.0",
    "eslint": "^8.57.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@google/genai": "1.14.0",
    "@modelcontextprotocol/sdk": "1.17.5",
    "@opentelemetry/api": "1.9.0",
    "zod": "3.25.76"
  }
}
